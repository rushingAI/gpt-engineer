        </div>
        <div className="flex-1 min-w-0">
          <p className="font-medium text-sm truncate">{user.name}</p>
          <p className="text-xs text-muted-foreground truncate">{user.email}</p>
        </div>
      </div>
    </Card>
  </div>
</aside>
```

COMPLETE DASHBOARD EXAMPLE (Multi-file structure):
```tsx
// src/pages/Index.tsx (main orchestration)
import { useState } from "react"
import { Button } from "@/components/ui/button"  // ‚úÖ CORRECT
import { Card } from "@/components/ui/card"      // ‚úÖ CORRECT
import { Input } from "@/components/ui/input"    // ‚úÖ CORRECT
import { Home, Users, Settings, TrendingUp } from "lucide-react"
import { cn } from "@/lib/utils"

export default function Index() {
  // ‚úÖ ALL state here
  const [activeMenu, setActiveMenu] = useState("home")
  
  const stats = [
    { label: "Total Users", value: "2,543", change: 12, icon: Users },
    { label: "Revenue", value: "$45.2k", change: 8, icon: TrendingUp }
  ]
  
  // ‚úÖ ALL UI rendering here
  return (
<div className="flex min-h-screen bg-background">
  {/* ‚úÖ Sidebar defined INLINE - not imported! */}
  <aside className="fixed left-0 top-0 h-screen w-64 bg-card border-r border-border p-6">
    <h1 className="font-display text-2xl font-bold mb-8">Dashboard</h1>
    <nav className="space-y-2">
      {[
        { id: 'home', label: 'Home', icon: Home },
        { id: 'users', label: 'Users', icon: Users },
        { id: 'settings', label: 'Settings', icon: Settings }
      ].map(item => (
        <button
          key={item.id}
          onClick={() => setActiveMenu(item.id)}
          className={cn(
            "w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all",
            activeMenu === item.id 
              ? "bg-primary text-primary-foreground shadow-card" 
              : "text-muted-foreground hover:bg-secondary"
          )}
        >
          <item.icon className="w-5 h-5" />
          <span>{item.label}</span>
        </button>
      ))}
    </nav>
  </aside>
  
  {/* Main content */}
  <main className="flex-1 ml-64 p-8">
    {/* Header - MUST use font-display */}
    <header className="mb-12">
      <h1 className="font-display text-4xl font-bold">Dashboard Overview</h1>
      <p className="text-muted-foreground text-lg mt-2">Welcome back!</p>
    </header>
    
    {/* ‚úÖ Stats Cards defined INLINE - not imported! */}
    <div className="grid md:grid-cols-2 gap-8 mb-8">
      {stats.map((stat) => (
        <Card key={stat.label} className="p-8 rounded-2xl shadow-card hover:shadow-hover transition-all">
          <div className="flex items-center justify-between mb-4">
            <p className="text-sm text-muted-foreground">{stat.label}</p>
            <stat.icon className="w-5 h-5 text-primary" />
          </div>
          <p className="font-display text-4xl font-bold mb-2">{stat.value}</p>
          <p className="text-sm text-green-600">+{stat.change}% from last month</p>
        </Card>
      ))}
    </div>
  </main>
</div>
  ) // ‚úÖ End of return
} // ‚úÖ End of Index component
```

